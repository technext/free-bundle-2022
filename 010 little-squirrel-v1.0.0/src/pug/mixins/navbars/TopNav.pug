mixin TopNav
  +Section(false, 'container')(class="bg-primary py-2 d-none d-sm-block")
    .row.align-items-center
      .col-auto.d-none.d-lg-block
        p.my-2.fs--1
          i.fas.fa-map-marker-alt.me-3
          span 1600 Amphitheatre Parkway, CA 94043 
      .col-auto.ms-md-auto.order-md-2.d-none.d-sm-block
        ul.list-unstyled.list-inline.my-2
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-facebook-f.text-900
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-pinterest.text-900
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-twitter.text-900
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-instagram.text-900  

      .col-auto
        p.my-2.fs--1
          i.fas.fa-envelope.me-3
          a(href='mailto:vctung@outlook.com').text-900 vctung@outlook.com  