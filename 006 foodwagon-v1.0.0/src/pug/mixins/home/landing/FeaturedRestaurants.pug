mixin FeaturedRestaurant(config)
  .col-sm-6.col-md-4.col-lg-3.h-100.mb-5
    .card.card-span.h-100.text-white.rounded-3
      img.img-fluid.rounded-3(src=`${CWD}assets/img/gallery/${config.image}` alt='...').h-100
      .card-img-overlay.ps-0
        span.badge.bg-danger.p-2.ms-3
          i.fas.fa-tag.me-2.fs-0
          span.fs-0=config.discount
          
        span.badge.bg-primary.ms-2.me-1.p-2
          i.fas.fa-clock.me-1.fs-0
          span.fs-0=config.time      
      .card-body.ps-0 
        .d-flex.align-items-center.mb-3
            img(src=`${CWD}assets/img/gallery/${config.logo}` alt='').img-fluid
            .flex-1.ms-3
              h5.mb-0.fw-bold.text-1000=config.name 
              span.text-primary.fs--1.me-1
                i.fas.fa-star
              span.mb-0.text-primary=config.rating

        span.badge(class=`${config.badgeBg}`).p-2
          span.fw-bold.fs-1(class=`${config.badgeTextColor}`)=config.status 
mixin  FeaturedRestaurants
