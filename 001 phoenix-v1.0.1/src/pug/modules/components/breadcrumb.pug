extends ../../layouts/LayoutComponent
include ../../mixins/common/Avatar

append variables
  -
    var pageHeader = {
      title: 'Breadcrumb',
      description: 'Indicate the current pageâ€™s location within a navigational hierarchy that automatically adds separators via CSS.',
      url: `https://getbootstrap.com/docs/${bootstrapVersion}/components/breadcrumb/`,
      linkText: 'Breadcrumb on Bootstrap',
      breadcrumb:[
        {
          name:'Components',
          link:'#!'
        },
        {
