mixin escape
  - var oldBuf = pug_html;
  - pug_html = '';
  block
  - pug_html = oldBuf + pug.escape(pretty(pug_html));
  
mixin cleanText(str)
  | #{((str.charAt(0).toUpperCase() + str.slice(1)).replace(/-/g, ' ')).replace('_and_', '&')}

mixin getFirstLetter(str)
  | #{str.match(/\b\w/g).join('')}

mixin hash(title)
  a(href=`#${title}`)
    h2=title

mixin NavLinkTitle(str)
  | #{(str.charAt(0).toUpperCase() + str.slice(1)).replace(/-/g, ' ')}

mixin FlatArray()
  - var z = ''

mixin componentCode
  pre&attributes(attributes)
    code.language-html
      +escape
        block