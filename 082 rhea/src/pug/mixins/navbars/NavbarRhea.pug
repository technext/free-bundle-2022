mixin NavbarRhea
  nav.navbar.navbar-expand-lg.fixed-top.py-3.backdrop(data-navbar-on-scroll)
    .container
      a.navbar-brand.d-flex.align-items-center.fw-bold.fs-2(href='#') 
        img.d-inline-block.align-top(src=`${CWD}assets/img/gallery/logo-icon.png` alt=''  width="50").img-fluid
        span.text-primary.fs-4.ps-2 Rhea
    
      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
    
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0
          li.nav-item
            a.nav-link(aria-current='page', href='#' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item
            a.nav-link.text-600(href='#featuresVideos') Video
          li.nav-item
            a.nav-link.text-600(href='#places') Destinations
          li.nav-item
            a.nav-link.text-600(href='#booking') Booking  
        form.ps-lg-5
          button.btn.btn-lg.btn-outline-primary.order-0(type='submit') Sign In
