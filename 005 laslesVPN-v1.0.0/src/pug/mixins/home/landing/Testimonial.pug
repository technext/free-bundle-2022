mixin Items(config)
  .col-md-4.mb-3.mb-md-0
    .card.h-100
      .card-body
        .d-flex.justify-content-between.align-items-center
          .d-flex.align-items-center
            img(src=`${CWD}assets/img/gallery/${config.image}` alt='').img-fluid
            .flex-1.ms-3
              h6.mb-0.fs--1.text-1000.fw-medium=config.name 
              p.fs--2.fw-normal.mb-0=config.country
          .d-flex.align-items-center
            span.text-900.me-3=config.star
            svg.bi.bi-star-fill(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='#FEA250' viewBox='0 0 16 16')
              path(d='M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z')    
        p.card-text.pt-3=config.text

